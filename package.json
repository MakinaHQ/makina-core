{
  "name": "makina-core",
  "version": "1.0.0",
  "description": "Makina core smart contracts",
  "repository": "https://github.com/MakinaHQ/makina-core.git",
  "author": "MakinaHQ",
  "license": "Unlicense",
  "type": "module",
  "devDependencies": {
    "@openzeppelin/merkle-tree": "^1.0.7",
    "ethers": "^6.13.4",
    "prettier": "3.3.3",
    "solhint": "5.0.5"
  },
  "scripts": {
    "lint": "yarn lint:sol && yarn prettier:check",
    "lint:sol": "forge fmt --check && yarn solhint \"{script,src,test}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{js,json,md,yml}\" \"!script/constants/output/**/*\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,yml}\" \"!script/constants/output/**/*\"",
    "coverage": "FOUNDRY_FUZZ_RUNS=32 forge coverage --no-match-coverage \"(script|test|src/caliber/vm)\"",
    "coverage:debug": "FOUNDRY_FUZZ_RUNS=32 forge coverage --no-match-coverage \"(script|test|src/caliber/vm)\" --report debug",
    "genMerkleDataMock": "node script/merkle/generateMerkleTreeDataMock.js",
    "deployMakinaCoreHubVTN": "source .env && HUB_CORE_PARAMS_FILENAME=Mainnet-test.json HUB_CORE_OUTPUT_FILENAME=Mainnet-VTN.json forge script script/deployments/DeployMakinaCoreHub.s.sol --rpc-url vtn_mainnet --account $DEPLOYER_ACCOUNT_NAME --slow  --broadcast --verify --etherscan-api-key $VTN_MAINNET_ETHERSCAN_API_KEY -vvvv",
    "deployHubMachineVTN": "source .env && HUB_CORE_OUTPUT_FILENAME=Mainnet-VTN.json HUB_MACHINE_PARAMS_FILENAME=Mainnet-test.json HUB_MACHINE_OUTPUT_FILENAME=Mainnet-VTN.json forge script script/deployments/DeployHubMachine.s.sol --rpc-url vtn_mainnet --account $DEPLOYER_ACCOUNT_NAME --slow --broadcast --verify --etherscan-api-key $VTN_MAINNET_ETHERSCAN_API_KEY -vvvv"
  }
}
