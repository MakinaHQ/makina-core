{
  "name": "makina-core",
  "version": "1.0.0",
  "description": "Makina core smart contracts",
  "repository": "https://github.com/MakinaHQ/makina-core.git",
  "author": "MakinaHQ",
  "devDependencies": {
    "prettier": "3.3.3",
    "solhint": "5.0.3"
  },
  "scripts": {
    "lint": "yarn lint:sol && yarn prettier:check",
    "lint:sol": "forge fmt --check && yarn solhint \"{script,src,test}/**/*.sol\"",
    "prettier:check": "prettier --check \"**/*.{json,md,yml}\"",
    "prettier:write": "prettier --write \"**/*.{json,md,yml}\"",
    "coverage": "forge coverage --no-match-coverage \"(script|test|src/caliber/vm)\"",
    "coverage:debug": "forge coverage --no-match-coverage \"(script|test|src/caliber/vm)\" --report debug"
  }
}
